{
  "manifest_version": 3,
  "name": "Volume Controller",
  "version": "1.0.0",
  "description": "Control webpage volume from 0% to 500% with an easy-to-use popup slider. Works on all websites including YouTube, Netflix, Spotify and more.",
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/chrome-extension-volume-controller",
  "permissions": [
    "activeTab", 
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Volume Controller"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}